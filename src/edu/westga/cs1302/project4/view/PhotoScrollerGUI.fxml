<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="mainPane" minHeight="400.0" minWidth="650.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.westga.cs1302.project4.view.PhotoScrollerCodeBehind">
   <children>
      <MenuBar prefHeight="25.0" prefWidth="650.0">
        <menus>
          <Menu text="_File">
            <items>
              <MenuItem fx:id="fileLoadAlbumMenuItem" onAction="#loadAlbum" text="_Load Album">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="L" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="fileSaveAlbumMenuItem" onAction="#saveAlbum" text="_Save Album">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="fileAddPhotoMenuItem" onAction="#addPhoto" text="_Add Photo">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            </items>
          </Menu>
          <Menu text="_Help">
            <items>
              <MenuItem onAction="#displayAbout" text="Abou_t">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="H" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <ImageView fx:id="imageView" fitHeight="250.0" fitWidth="300.0" layoutX="34.0" layoutY="68.0" pickOnBounds="true" preserveRatio="true" />
      <ListView fx:id="photosListView" layoutX="389.0" layoutY="68.0" prefHeight="250.0" prefWidth="200.0" />
      <Button fx:id="removeButton" layoutX="463.0" layoutY="343.0" mnemonicParsing="false" onAction="#removePhoto" text="Remove" />
      <Button fx:id="previousButton" layoutX="149.0" layoutY="343.0" mnemonicParsing="false" onAction="#previousPhoto" text="&lt;" />
      <Button fx:id="nextButton" layoutX="194.0" layoutY="343.0" mnemonicParsing="false" onAction="#nextPhoto" text="&gt;" />
      <Label layoutX="389.0" layoutY="51.0" text="Photos" />
   </children>
</AnchorPane>
