<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane minHeight="400.0" minWidth="650.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.westga.cs1302.project4.view.PhotoScrollerCodeBehind">
   <children>
      <MenuBar prefHeight="25.0" prefWidth="650.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="fileLoadAlbumMenuItem" mnemonicParsing="false" onAction="#loadAlbum" text="Load Album" />
                  <MenuItem fx:id="fileSaveAlbumMenuItem" mnemonicParsing="false" onAction="#saveAlbum" text="Save Album" />
                  <MenuItem fx:id="fileAddPhotoMenuItem" mnemonicParsing="false" onAction="#addPhoto" text="Add Photo" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <ImageView fitHeight="250.0" fitWidth="300.0" layoutX="34.0" layoutY="68.0" pickOnBounds="true" preserveRatio="true" />
      <ListView layoutX="389.0" layoutY="68.0" prefHeight="250.0" prefWidth="200.0" />
      <Button fx:id="removeButton" layoutX="463.0" layoutY="343.0" mnemonicParsing="false" onAction="#removePhoto" text="Remove" />
      <Button fx:id="previousButton" layoutX="149.0" layoutY="343.0" mnemonicParsing="false" onAction="#previousPhoto" text="&lt;" />
      <Button fx:id="nextButton" layoutX="194.0" layoutY="343.0" mnemonicParsing="false" onAction="#nextPhoto" text="&gt;" />
      <Label layoutX="389.0" layoutY="51.0" text="Photos" />
   </children>
</AnchorPane>
